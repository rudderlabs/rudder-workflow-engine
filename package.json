{
  "name": "rudder-workflow-engine",
  "version": "0.0.0",
  "description": "A generic workflow execution engine",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "jest --coverage --verbose",
    "build": "tsc",
    "clean": "rm -rf build",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . || exit 1",
    "format": "prettier --write '**/*.ts' '**/*.json'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudderlabs/rudder-workflow-engine.git"
  },
  "keywords": [
    "rudder",
    "rudderstack",
    "cdp",
    "workflow",
    "engine"
  ],
  "author": "RudderStack",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rudderlabs/rudder-workflow-engine/issues"
  },
  "homepage": "https://github.com/rudderlabs/rudder-workflow-engine#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/jest": "^29.0.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "jsonata": "^1.8.6",
    "lodash": "^4.17.21",
    "path": "^0.12.7"
  },
  "engines": {
    "node": ">=14.15.0 <15",
    "npm": ">=6.14.8"
  },
  "lint-staged": {
    "*.(ts|json)": "prettier --write"
  },
  "files": [
    "build/**/*.[jt]s",
    "CHANGELOG.md"
  ]
}
