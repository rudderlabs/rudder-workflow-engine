name: tests

on: pull_request

jobs:
  install-and-test:
    name: install and test
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@master

      - name: Install dependencies
        uses: actions/setup-node@v2
        with:
          node-version: 14
        run: npm ci

      - name: Run tests
        run: npm run test
